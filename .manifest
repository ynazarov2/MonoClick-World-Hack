{
  "name": "MonoClick World Hack",
  "version": "0.0.1",
  "description": "1 Click share tool",
  "background" : {
    "page": "background.html"
  },
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "MonoClick",
    "default_popup": "popup.html"
  },
  "default_locale":"en",
  "permissions": [
      "tabs", "<all_urls>" , "contextMenus", "notifications"
  ],
  "icons": { 
             "16": "icon.png",
             "48": "icon48.png",
             "128": "icon128.png" 
           }
}